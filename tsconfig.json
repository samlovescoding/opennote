{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "components/*": ["components/*"],
            "pages/*": ["pages/*"],
            "helpers/*": ["helpers/*"]
        }
    }
}
